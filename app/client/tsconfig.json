{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "module": "esNext",
        "lib": ["es2015", "es2017", "dom"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*"]
}