{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "target": "es6",
        "module": "esNext",
        "lib": ["es2015", "es2017"],
        "allowJs": true,
        "checkJs": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "Models/*": ["./models/*"]
        }
    },
    "exclude": ["node_modules", "tests/**/*"]
}
